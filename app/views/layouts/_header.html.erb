
<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top"> <%# ここから先はみんなbootstrap4を適応 %>
  <div class="container">
    <%= link_to "SweetsBlog", root_path, id: "header-logo" %>
    <nav>
      <ul class="nav navbar-expand-md navbar-nav .justify-content-end">
        <li class="nav-item active"><%= link_to "ホーム", root_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to "ヘルプ", help_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to "投稿一覧", posts_path, class: 'nav-link' %></li>
        <% if logged_in? %> <%# ログインしてる人には見える %>
          <li class="nav-item"><%= link_to "投稿する", new_post_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to "ユーザー", users_path, class: 'nav-link' %></li>
          <li class="dropdown nav-item">
            <a href="#" class="dropdown-toggle nav-link" id="dropdownMenuLink" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              アカウント<b class="caret"></b>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <%= link_to current_user.name, current_user, class: 'dropdown-item' %>
              <%= link_to "設定", edit_user_path(current_user), class: 'dropdown-item' %>
              <div class="divider">
              <%= link_to "ログアウト", logout_path, class: 'dropdown-item', method: :delete %>
              <%# <%= link_to "退会", current_user, class: 'dropdown-item', method: :delete %>
            </div>
          </li>
        <% else %>
          <%= link_to "ログイン", login_path, class: 'nav-link' %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>