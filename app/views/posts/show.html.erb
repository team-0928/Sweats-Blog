<div class="col-md-8">
  <section class="post_info" %>
    <div class="post_user">
      <%= link_to image_tag(@post.user.avatar, size: '80x80', alt: "User Image"), @post.user %>
      <%= link_to "投稿者：#{@post.user.name}", @post.user %><br>
      <span class="timestamp">
        Posted <%= time_ago_in_words(@post.created_at) %> ago.
      </span>
    </div>
    <%= render 'shared/slider' %>
    <p><%= "コメント：#{@post.content}" %></p>
    <p><%= "商品名：#{@post.name}" %></p>
    <p><%= "値段：#{@post.price}円" %></p>
    <p><%= "店名：#{@post.store}" %></p>
    <p><%= "住所：#{@post.address}" %></p>
    <%# <>いいね件数： <%= @post.likes.count %>
    <% if current_user && current_user.already_liked?(@post) %>
      <%# <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
      <%= link_to post_like_path(@post), method: :delete do %>
        <i class="fas fa-thumbs-up"><%= @post.likes.count %></i>
      <% end %>
    <% else %>
      <%# <%= button_to 'いいね', post_likes_path(@post) %>
      <%= link_to post_likes_path(@post), method: :post do %>
        <i class="far fa-thumbs-up"><%= @post.likes.count %></i>
      <% end %>
    <% end %>
    <p>いいねしたユーザー</p>
    <% @post.liked_users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
    <% if current_user?(@post.user) %>
      <%= link_to "変更", edit_post_path, class: "btn btn-primary", role: "button" %>
      <%= link_to "削除", @post, method: :delete,
              class: "btn btn-primary", role: "button",
              data: { confirm: "この投稿を削除しますか？" } %>
    <% end %>
  </section>
</div>