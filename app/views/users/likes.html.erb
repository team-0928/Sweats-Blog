<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag @user.avatar, size: '100x100', alt: "User Image" %>
      <h2><%= @user.name %></h2>
      <% if current_user && @user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(current_user.id) %>
      <% end %>
    </div>

    <div class="btn-group" role="group" aria-label="Basic example">
      <button type="button" class="btn btn-lg btn-primary btn-opt"><%= link_to "投稿(#{@user.posts.count})", @user %></button>
      <button type="button" class="active btn btn-lg btn-success btn-opt"><%= link_to "いいね!(#{@user.liked_posts.count})", "/users/#{@user.id}/likes" %></button>
    </div>

    <%= will_paginate @posts %>

    <div class="row">
    <% @posts.each do |post| %>
      <aside class="col-md-4">
        <section class="post_part">
        <%= link_to image_tag(post.image, size: '300x300', alt: "Sweet Image"), post if post.image.attached? %><br>
        <%= link_to post.name, post %><br>
        <%= link_to "投稿者：#{post.user.name}", user_path(post.user) %>
        </section>
      </aside>
    <% end %>
    </div>

    <%= will_paginate @posts %>
  </div>
</div>
