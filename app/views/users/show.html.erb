<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag @user.avatar.url, size: '100x100', alt: "User Image" %>
      <h2><%= @user.name %></h2>
      <% if current_user && @user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(current_user.id) %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li class="active"><%= link_to "投稿(#{@user.posts.count})", @user %></li>
      <li><%= link_to "いいね!", "/users/#{@user.id}/likes" %></li>
    </ul>

    <%= will_paginate @posts %>

    <div class="row">
      <%= render @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>

    <%= will_paginate @posts %>
  </div>
</div>