<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag @user.avatar, size: '100x100', alt: "User Image" if @user.avatar.attached? %>
      <h2><%= @user.name %></h2>
      <% if current_user && @user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(current_user.id) %>
      <% end %>
    </div>

    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to "投稿(#{@user.posts.count})", @user, class: "active btn btn-primary", role: "button" %>
      <%= link_to "いいね!(#{@user.liked_posts.count})", "/users/#{@user.id}/likes", class: "btn btn-success", role: "button" %>
    </div>

    <%= will_paginate @posts %>

    <div class="row">
      <%= render @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>

    <%= will_paginate @posts %>
  </div>
</div>
